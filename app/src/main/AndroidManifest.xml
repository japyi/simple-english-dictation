<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.japyi0210.simpleenglishdictation">

    <!-- ✅ 권한 설정 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:anyDensity="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- ✅ 구글 광고용 앱 ID -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1872760638277957~5741344435" />

        <!-- ✅ Firebase 메시징 아이콘 -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_launcher_foreground" />

        <!-- ✅ Firebase 로그인 -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" />

        <!-- ✅ 기존 통계 화면 -->
        <activity android:name=".StatisticsActivity" />

        <!-- ✅ 새로 만든 통계 차트 화면 -->
        <activity
            android:name=".StatisticsChartActivity"
            android:exported="true" />

        <!-- ✅ 메인 기능 -->
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateVisible|adjustPan"
            android:exported="true" />

        <!-- ✅ 시나리오 선택 -->
        <activity
            android:name=".ScenarioSelectActivity"
            android:exported="true" />

        <!-- ✅ AI 복습 기능 -->
        <activity
            android:name=".AiReviewActivity"
            android:exported="true" />

        <!-- ✅ 로그인 or 게스트 선택 화면 -->
        <activity
            android:name=".StartActivity"
            android:exported="true" />

        <!-- ✅ 앱 시작 지점 (Splash → StartActivity로 전환됨) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
